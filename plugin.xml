	<category
            id="org.eclipse.imp.wizards.transform"
            name="Transformation Services"
            parentCategory="org.eclipse.imp.wizards"/>
      <wizard
            category="org.eclipse.imp.wizards/org.eclipse.imp.wizards.transform"
            class="org.eclipse.imp.wizards.NewRefactoringWizard"
            icon="icons/sample.gif"
            id="org.eclipse.imp.newRefactoring"
            name="Refactoring"/> 
   </extension>
   
   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            description="IMP Presentation Specification"
            extensions="spec"
            language="spec"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="org.eclipse.imp.presentation.SpecParseController"
            language="spec"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="org.eclipse.imp.presentation.editor.SpecTokenColorer"
            language="spec"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.imp.perspective.SAFARIPerspectiveFactory"
            icon="icons/impPerspective.gif"
            id="org.eclipse.imp.perspective"
            name="IMP IDE Building"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.outliner">
      <outliner
            class="org.eclipse.imp.presentation.outliner.SpecOutliner"
            language="spec">
      </outliner>
   </extension>
   <extension
         id="org.eclipse.imp.presentation.builder"
         name="spec builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.eclipse.imp.presentation.builders.SpecBuilder">
            <parameter
                  name="foo"
                  value="bar">
            </parameter>
         </run>
      </builder>
   </extension>
   <extension
         id="org.eclipse.imp.presentation.nature"
         name="Presentation Specification Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="org.eclipse.imp.presentation.builder">
      </builder>
      <runtime>
         <run
               class="org.eclipse.imp.presentation.builders.SpecNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="problem"
         name="spec Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.jdt.core.IJavaProject"
            adaptable="false"
            nameFilter="*"
            id="org.eclipse.imp.presentation.projectContextMenu">
         <action
               label="Enable spec Builder"
               tooltip="Enable the spec builder for this project"
               class="org.eclipse.imp.presentation.actions.EnableNature"
               id="org.eclipse.imp.presentation.actions.enableNatureAction">
         </action>
      </objectContribution>
   </extension>
</plugin>
